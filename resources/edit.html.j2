                                    [/[a-zA-Z_]\w*/, 'identifier']
                                ],
                                comment: [
                                    [/[^\/*]+/, 'comment'],
                                    [/\/\*/, 'comment', '@push'],
                                    ["\\*/", 'comment', '@pop'],
